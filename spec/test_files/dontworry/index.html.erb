<% page_header "Events/Tradeshows" %>
<%= page_image "site_images/overview_image.jpg" %>

<div>
  <ul>
    <% @events.each do |event| %>
      <li>
        <%= link_to event.name, event %>
        <span class="controls-already-there">
          <%= link_to "Edit", edit_event_path(event) %> | 
          <%= link_to "Delete", event, :method => :delete, :confirm => "Are you sure?" %>
        </span>
      </li>
    <% end -%>
  </ul>
</div>

<% admin_nav do %>
  <p><%= link_to "New event", new_event_path %></p>
<% end -%>