<% page_header "Event/Tradeshow", @event.name %>
<%= page_image "site_images/overview_image.jpg" %>

<div class="classy_div">
  <p id="show_me_your_id_p" class="already-there"><%= @event.date %></p>
  <%= @event.description %>
  <p id="show_me_your_id_p" class="classy_p"><%= link_to "Additional Information", @event.url %></p>
</div>

<% admin_nav do %>
  <p id="show_me_your_id_p" class="classy_p"><%= link_to "Edit event", edit_event_path(@event) %></p>
  <p id="show_me_your_id_p" class="already-there"><%= link_to "Back to list", events_path %></p>
<% end -%>
